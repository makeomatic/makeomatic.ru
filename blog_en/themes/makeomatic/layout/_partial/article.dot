<article class="{{! item.layout }}">
  {{? item.photos }}
    {{#def.load('_partial/post/gallery'); }}
  {{?}}
  <div class="post-content">
    <header class='post-header'>
      {{#def.load('_partial/post/title') }}
      {{? item.layout != 'page' }}
        <div class="icon"></div>

        <time datetime="{{! item.date.toDate().toISOString() }}">
            {{! item.date.format(it.config.date_format) }}
        </time>

        {{#def.load('_partial/post/tag') }}

        <span class='author'>
            <img src='//www.gravatar.com/avatar/{{= item.gravatar}}?s=20' />
            {{= item.author }}
        </span>

      {{?}}
    </header>
    <section class="body">
      {{? item.excerpt && index }}
        {{= item.excerpt }}
      {{??}}
        {{= item.content }}
      {{?}}
    </section>
    <footer class='post-footer clearfix'>
      {{? index }}
        {{? item.excerpt }}
        <div class="pull-left">
            <a href="{{= it.config.root }}{{= item.path }}#more" class="more-link">{{= it.theme.excerpt_link }}</a>
        </div>
        {{?}}
        {{? item.comment && it.config.disqus_shortname }}
        <div class="pull-right">
          <a href="{{= item.permalink }}#disqus_thread" class="comment-link">Comments</a>
        </div>
        {{?}}
      {{??}}
        {{#def.load('_partial/post/category') }}
        {{#def.load('_partial/post/share') }}
      {{?}}
    </footer>
  </div>
</article>

{{#def.load('_partial/comment') }}